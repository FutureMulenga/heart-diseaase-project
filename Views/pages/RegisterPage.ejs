<link rel="stylesheet" href="/css/auth.css">


<form action="/auth/createAccount" method="post" onsubmit="return validateForm()" class="authBox">
    <h1>Create Account</h1>
    <div class="inputFieldContainer">
        <input type="text" placeholder="Full Name" name="userName" required/>
    </div>
    <div class="inputFieldContainer">
        <input type="email" placeholder="Email Address" name="emailAddress" required/>
    </div>
    <div class="inputFieldContainer">
        <input type="password" placeholder="Password" id="password" name="password" required/>
    </div>
    <div class="inputFieldContainer">
        <input type="password" placeholder="Confirm Password" id="confirmPassword" name="confirmPassword" required/>
    </div>
    <br> 
    <div>
        <input type="checkbox" required>
        Agree to <a href="/termsAndConditions">Terms & Conditions</a>
    </div>

    <div class="buttonBox">
        <button>Create Account</button>
    </div>

    <div><a href="/auth/login" style="color: blue;">Login</a> into an existing account instead?</div>
</form>

<script>
    function validateForm() {
        var password = document.getElementById("password").value;
        var confirmPassword = document.getElementById("confirmPassword").value;

        if (password !== confirmPassword) {
            alert("Passwords do not match. Please check and try again.");
            return false; // Prevent form submission
        }

        return true; // Allow form submission
    }
</script>

